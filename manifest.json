{
  "name": "Bing Annihilator",
  "version": "0.02",
  "description": "Redirects Bing searches to Google.",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "*://*.bing.com/*"
  ],
  "background": {
    "service_worker": "main.js"
  }
}
